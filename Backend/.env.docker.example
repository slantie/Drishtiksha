# Docker Compose Environment Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# Database Configuration
# =============================================================================

# If you have an existing PostgreSQL database, set the full DATABASE_URL here
# and comment out the individual POSTGRES_* variables below
# DATABASE_URL=postgresql://username:password@host:port/database?schema=public

# PostgreSQL Database Settings (used if DATABASE_URL is not set)
POSTGRES_DB=VidVigilante
POSTGRES_USER=postgres
POSTGRES_PASSWORD=db_password
POSTGRES_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# =============================================================================
# Backend Application Configuration
# =============================================================================
NODE_ENV=production
BACKEND_PORT=3000

# Storage Configuration
STORAGE_PROVIDER=local
LOCAL_STORAGE_PATH=/app/storage/media
BASE_URL=http://localhost:3000

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# =============================================================================
# Authentication & Security
# =============================================================================
JWT_SECRET=secret
JWT_REFRESH_SECRET=secret
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# ML Server Configuration
# =============================================================================
# URL to your ML server (running outside Docker)
SERVER_URL=http://host.docker.internal:8000
SERVER_API_KEY=secret

# =============================================================================
# Cloudinary Configuration (Optional - only if using cloud storage)
# =============================================================================
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# =============================================================================
# Development Overrides
# =============================================================================
# Uncomment and modify these for development environment
# NODE_ENV=development
# BACKEND_PORT=3000
# FRONTEND_URL=http://localhost:5173
